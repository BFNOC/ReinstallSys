<UserControl x:Class="ReinstallSys.UserController.Activator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReinstallSys.UserController"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             DataContext="{Binding Activator, Source={StaticResource Locator}}" 
             d:DesignHeight="450" d:DesignWidth="800">
    <hc:SimpleStackPanel>
        <Button 
            Content="一键激活系统或Office"
            Style="{StaticResource ButtonPrimary}"
            Margin="20"
            Width="200"
            Command="{Binding StartActivator}"
            />
    </hc:SimpleStackPanel>
</UserControl>
