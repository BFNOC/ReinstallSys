<UserControl x:Class="ReinstallSys.UserController.MyStepBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:ReinstallSys.UserController"
             mc:Ignorable="d" 
             DataContext="{Binding StepBar, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <hc:StepBar Grid.ColumnSpan="2" ItemsSource="{Binding DataList}">
            <hc:StepBar.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Description}" />
                </DataTemplate>
            </hc:StepBar.ItemTemplate>
        </hc:StepBar>
    </Grid>
</UserControl>
