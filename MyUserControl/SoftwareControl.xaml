<UserControl x:Class="ReinstallSys.MyUserControl.SoftwareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReinstallSys.UserController"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             
             d:DesignHeight="450" d:DesignWidth="800">
    <hc:TransitioningContentControl>
        <StackPanel>
            <CheckBox Margin="0,16,0,0" Content="{Binding SoftwareName}" />
            <TextBlock Margin="0,10,0,0"  HorizontalAlignment="Left" Text="{Binding SoftwareDescription}" Style="{StaticResource TextBlockDefaultSecLight}" />
            <ProgressBar Style="{StaticResource ProgressBarSuccess}" Margin="0,10,0,10" Value="{Binding SoftwareProgressBar}"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
